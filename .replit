modules = ["nodejs-20"]

[nix]
channel = "stable-23_05"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[deployment]
run = ["npm", "start"]
deploymentTarget = "cloudrun"

[workflows]

[[workflows.workflow]]
name = "Build and Preview"
author = 38270576
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm exec -y serve -- -s build -l 5000"
