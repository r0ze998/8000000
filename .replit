
modules = ["nodejs-20"]

[nix]
channel = "stable-23_05"

[workflows]
runButton = "Development Server"

[workflows.workflow]
name = "Development Server"
author = 38270576

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[workflows.build]
name = "Build and Preview"
author = 38270576

[[workflows.build.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.build.tasks]]
task = "shell.exec"
args = "npm exec -y serve -- -s build -l 5000"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[deployment]
run = ["npm", "exec", "-y", "serve", "--", "-s", "build", "-l", "5000"]
deploymentTarget = "cloudrun"
